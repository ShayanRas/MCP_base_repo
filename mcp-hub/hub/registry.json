{
  "servers": {
    "supabase": {
      "name": "Supabase MCP Server",
      "description": "Connect to Supabase PostgreSQL databases with full CRUD operations",
      "path": "./servers/supabase",
      "type": "node",
      "monorepo": true,
      "packageManager": "pnpm",
      "transportModes": [
        "stdio",
        "sse",
        "http"
      ],
      "httpConfig": {
        "defaultPort": 3002,
        "endpoint": "/mcp",
        "sseEndpoint": "/sse",
        "authEnabled": false
      },
      "commands": {
        "install": "pnpm install",
        "build": "pnpm build",
        "start": "node packages/mcp-server-supabase/dist/transports/stdio.js",
        "start:sse": "node packages/mcp-server-supabase/dist/transports/sse.js",
        "start:http": "node packages/mcp-server-supabase/dist/transports/streamableHttp.js",
        "test": "node test-connection.js"
      },
      "requiredEnv": {
        "SUPABASE_ACCESS_TOKEN": {
          "description": "Personal access token from Supabase Dashboard",
          "sensitive": true,
          "required": true
        },
        "SUPABASE_PROJECT_REF": {
          "description": "Project reference ID from Supabase Dashboard",
          "sensitive": false,
          "required": true
        }
      },
      "optionalArgs": [
        "--read-only"
      ],
      "features": [
        "SQL execution",
        "Schema introspection",
        "Migrations",
        "TypeScript type generation",
        "Edge Functions management"
      ],
      "status": "not-installed",
      "installed": false,
      "built": true
    },
    "everything": {
      "name": "Everything Example Server",
      "description": "MCP demo server showcasing all protocol features",
      "path": "./servers/everything",
      "type": "node",
      "monorepo": false,
      "packageManager": "npm",
      "transportModes": [
        "stdio",
        "sse",
        "http"
      ],
      "httpConfig": {
        "defaultPort": 3001,
        "endpoint": "/mcp",
        "sseEndpoint": "/sse",
        "authEnabled": false
      },
      "commands": {
        "install": "npm install",
        "build": "npm run build",
        "start": "node dist/stdio.js",
        "start:sse": "node dist/sse.js",
        "start:http": "node dist/streamableHttp.js"
      },
      "requiredEnv": {},
      "optionalArgs": [],
      "features": [
        "Tools demonstration",
        "Resources with pagination",
        "Prompts with arguments",
        "Progress notifications",
        "Sampling integration",
        "Multi-modal content"
      ],
      "status": "ready",
      "installed": true,
      "built": true
    },
    "pg_tools": {
      "name": "PostgreSQL Tools Server",
      "description": "Direct PostgreSQL database operations with full SQL support",
      "path": "./servers/pg_tools",
      "type": "python",
      "monorepo": false,
      "packageManager": "pip",
      "transportModes": [
        "stdio",
        "http"
      ],
      "httpConfig": {
        "defaultPort": 3003,
        "endpoint": "/mcp",
        "sseEndpoint": "/mcp/sse",
        "authEnabled": false
      },
      "commands": {
        "install": "uv pip install -e .",
        "build": "none",
        "start": "python -m mcp_server_pg.server",
        "start:http": "python -m mcp_server_pg.http_server",
        "test": "python -m mcp_server_pg.server"
      },
      "requiredEnv": {
        "DATABASE_URL": {
          "description": "PostgreSQL connection string (postgresql://user:password@host:port/database)",
          "sensitive": true,
          "required": true
        }
      },
      "optionalArgs": [],
      "features": [
        "Execute SQL queries",
        "List database tables",
        "Describe table schemas",
        "Get table constraints",
        "Get table indexes",
        "Database size info",
        "Table size analysis"
      ],
      "status": "ready",
      "installed": true,
      "built": true
    }
  },
  "config": {
    "claudeDesktopPath": {
      "windows": "%APPDATA%/Claude/claude_desktop_config.json",
      "mac": "~/Library/Application Support/Claude/claude_desktop_config.json",
      "linux": "~/.config/Claude/claude_desktop_config.json"
    },
    "defaultPackageManager": "npm",
    "autoInstall": true,
    "autoBuild": true,
    "backupConfigs": true,
    "httpPortRange": {
      "start": 3000,
      "end": 3100
    },
    "monitoring": {
      "enabled": true,
      "autoRestart": true,
      "healthCheckInterval": 30000
    }
  }
}