{
  "name": "mcp-hub",
  "version": "1.0.0",
  "description": "Centralized hub for managing multiple MCP servers",
  "type": "module",
  "main": "hub/cli.js",
  "scripts": {
    "mcp": "node hub/cli.js",
    "setup": "npm install && node hub/cli.js",
    "test": "node hub/cli.js --test",
    "mcp:env": "node hub/utils/env-manager.js show",
    "mcp:env:init": "node hub/utils/env-manager.js init",
    "mcp:env:validate": "node hub/utils/env-manager.js validate"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "ai",
    "server-manager"
  ],
  "author": "X",
  "license": "MIT",
  "dependencies": {
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.11.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "dotenv": "^16.4.5",
    "inquirer": "^9.2.15",
    "node-fetch": "^3.3.2",
    "ora": "^8.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}