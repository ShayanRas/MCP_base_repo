# ============================================
# MCP Hub Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# All variables are optional - the hub will prompt for missing values

# ============================================
# Supabase MCP Server
# ============================================
# Get your personal access token from: https://supabase.com/dashboard/account/tokens
# Find your project reference in: Project Settings → General → Reference ID

# SUPABASE_ACCESS_TOKEN=sbp_your_token_here
# SUPABASE_PROJECT_REF=your_project_ref_here

# ============================================
# PostgreSQL Tools Server (pg_tools)
# ============================================
# Connection string for your PostgreSQL database
# Format: postgresql://username:password@host:port/database
# Example: postgresql://user:pass@localhost:5432/mydb
# For Supabase: postgresql://postgres.[project-ref]:[password]@[region].pooler.supabase.com:5432/postgres

# DATABASE_URL=postgresql://username:password@host:port/database

# Optional: Enable read-only mode for safety
# SUPABASE_READ_ONLY=true

# ============================================
# Everything Server
# ============================================
# No configuration needed - this is a demo server

# ============================================
# Hub Configuration (Optional)
# ============================================
# MCP_HUB_AUTO_INSTALL=true      # Automatically install missing dependencies
# MCP_HUB_AUTO_BUILD=true        # Automatically build servers
# MCP_HUB_DEFAULT_READ_ONLY=false # Default read-only mode for all servers
# MCP_HUB_TIMEOUT=10000          # Timeout for server tests (ms)
# MCP_HUB_LOG_LEVEL=info         # Log level: debug, info, warn, error

# ============================================
# Advanced Configuration
# ============================================
# MCP_HUB_CLAUDE_PATH=           # Override Claude Desktop config path
# MCP_HUB_BACKUP_CONFIGS=true    # Backup configs before overwriting
# MCP_HUB_CONFIG_DIR=./configs   # Directory for generated configs